<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="department" class="hello.Department">
        <property name="deptName" value="Information Technology"/>
    </bean>
    <bean id="employee" class="hello.Employee" autowire="byType">
        <property name="eid" value="10"/>
        <property name="ename" value="Initial name"/>
    </bean>
</beans>